<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="secured.tips">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.Manifest.permission.READ_PHONE_STATE" />

    <meta-data
        android:name="com.google.firebase.messaging.default_notification_icon"
        android:resource="@drawable/notification_icon" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icn"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FreeActivity"
            android:label="   Free Tips" />
        <activity
            android:name=".PremiumActivity"
            android:label="   VIP" />
        <activity
            android:name=".LoginActivity"
            android:label="Login" />
        <activity
            android:name=".SignUpActivity"
            android:label="Sign Up" />
        <activity
            android:name=".OverOneActivity"
            android:label="   Over 1.5" />
        <activity
            android:name=".OverTwoActivity"
            android:label="   Over 2.5" />
        <activity
            android:name=".DrawActivity"
            android:label="   Draws" />
        <activity
            android:name=".FloatingActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <service android:name="datafiles.MyFirebaseServicee"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.permission.RECEIVE"/>
            </intent-filter>
        </service>
        <service android:name="datafiles.MyService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".PaystackActivity" />
        <activity
            android:name=".VipPageActivity"
            android:label="   VIP" />
        <activity android:name=".MyProfileActivity" />
        <activity
            android:name=".RoomsPageActivity"
            android:label="   TipZone" />
        <activity android:name=".AboutTipzoneActivity" />
        <activity
            android:name=".ChatRoomActivity"
            android:label="   TipZone"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".MemberProfileActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ProfileEditActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".SubscriptionReloadActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" />
        <activity
            android:name=".NewsActivity"
            android:label="   Secured Tips News" />
        <activity
            android:name=".NewsStoryActivity"
            android:allowBackup="true"
            android:hardwareAccelerated="true" />
        <activity android:name=".ContactActivity" />
    </application>

</manifest>