<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/layBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/CollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/imgCover"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/bg_one" />

                <ImageView
                    android:id="@+id/imgProfilePic"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/dspc" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgProfilePic"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="_"
                    android:textColor="@color/color_text"
                    android:textSize="24sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imgProfilePic"
                    android:layout_below="@+id/txtName"
                    android:inputType="textPersonName"
                    android:text="username"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imgUsernameIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/txtName"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@id/txtUsername"
                    app:srcCompat="@drawable/symbol_at" />

                <TextView
                    android:id="@+id/txtGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imgProfilePic"
                    android:layout_below="@+id/txtUsername"
                    android:inputType="textPersonName"
                    android:text="gender"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imgGenderIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignStart="@+id/imgUsernameIcon"
                    android:layout_below="@+id/txtUsername"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/fui_ic_facebook_white_22dp" />

                <TextView
                    android:id="@+id/txtPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imgProfilePic"
                    android:layout_below="@+id/txtGender"
                    android:text="0 points"
                    android:textColor="@color/color_text"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imgPointIcon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignStart="@+id/imgUsernameIcon"
                    android:layout_below="@+id/imgGenderIcon"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <View
                    android:id="@+id/viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/imgPointIcon"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimaryDark" />
            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9BC996"
            app:tabGravity="fill"
            app:tabMode="fixed" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</android.support.design.widget.CoordinatorLayout>

