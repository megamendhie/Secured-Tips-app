<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#84c47f"
                android:endColor="#84c47f"
                android:angle="270" />
            <corners android:radius="16dp"/>
            <stroke android:width="3dp" android:color="#a45327" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@android:color/holo_orange_light"
                android:endColor="@android:color/holo_orange_light"
                android:angle="270" />
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="@android:color/transparent" />
        </shape>
    </item>

</selector>